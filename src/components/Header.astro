---
import Logo from "../assets/logo.svg"
import { Home, GraduationCap, Binary, Database } from '@lucide/astro';

const currentPath = Astro.url.pathname;

const infos = [
  { content: "Home", link: "/", Icon: Home, label: "Ir para página inicial" },
  { content: "Introdução", link: "/introducao", Icon: GraduationCap, label: "Ir para introdução" },
  { content: "Algoritmos", link: "/algoritmos", Icon: Binary, label: "Ir para algoritmos" },
  { content: "E. de dados", link: "/estrutura-de-dados", Icon: Database, label: "Ir para estrutura de dados" },
]
---

<header class="sticky top-0 z-50 w-full bg-card/80 backdrop-blur-md border-b border-border transition-all duration-300">
  <nav class="max-w-7xl mx-auto px-6 h-16 flex justify-between items-center" role="navigation" aria-label="Navegação principal">
    
    <a href="/" class="flex items-center gap-2 hover:opacity-80 transition-opacity" aria-label="VisuDSA - Página inicial">
      <span class="size-9">
        <Logo/>
      </span>
      <span class="font-bold text-foreground hidden sm:block">VisuDSA</span>
    </a>

    <button 
      class="md:hidden p-2 text-foreground hover:bg-secondary rounded-lg transition-colors"
      id="open_menu_btn"
      aria-expanded="false"
      aria-controls="mobile-menu"
      aria-label="Abrir menu de navegação"
    >
      <span class="sr-only">Abrir menu</span>
      <svg xmlns="http://www.w3.org/2000/svg" class="size-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </button>

    <ul class="hidden md:flex items-center gap-6">
      {infos.map((item) => {
        const isActive = currentPath === item.link || (item.link !== '/' && currentPath.startsWith(item.link));
        return (
          <li>
            <a 
              href={item.link} 
              aria-label={item.label}
              aria-current={isActive ? 'page' : undefined}
              class:list={[
                "flex items-center gap-2 text-sm font-medium transition-colors duration-200 relative group",
                isActive ? "text-accent" : "text-muted-foreground hover:text-accent"
              ]}
            >
              <item.Icon class="size-4" aria-hidden="true" />
              {item.content}
              <span class:list={[
                "absolute -bottom-1 left-0 w-0 h-0.5 bg-accent transition-all duration-300 group-hover:w-full",
                isActive ? "w-full" : ""
              ]}></span>
            </a>
          </li>
        );
      })}
    </ul> 
  </nav>

  <div 
    id="mobile-menu" 
    class="hidden md:hidden absolute top-full left-0 w-full bg-card border-b border-border shadow-xl overflow-hidden animate-slide-down"
    role="menu"
    aria-label="Menu mobile"
  >
    <ul class="flex flex-col p-4 bg-card">
      {infos.map((item) => {
        const isActive = currentPath === item.link || (item.link !== '/' && currentPath.startsWith(item.link));
        return (
          <li>
            <a 
              href={item.link} 
              aria-label={item.label}
              aria-current={isActive ? 'page' : undefined}
              role="menuitem"
              class:list={[
                "flex items-center gap-3 py-3 px-4 transition-all rounded-lg",
                isActive ? "text-accent bg-accent/10" : "text-muted-foreground hover:bg-secondary hover:text-accent"
              ]}
            >
              <item.Icon class="size-5" aria-hidden="true" />
              {item.content}
            </a>
          </li>
        );
      })}
    </ul>
  </div>
</header>

<style>
  @keyframes slide-down {
    from { opacity: 0; transform: translateY(-10px); }
    to { opacity: 1; transform: translateY(0); }
  }
  .animate-slide-down {
    animation: slide-down 0.3s ease-out forwards;
  }
</style>

<script>
  const btn = document.getElementById("open_menu_btn");
  const menu = document.getElementById("mobile-menu");

  if (btn && menu) {
    btn.addEventListener("click", () => {
      const isHidden = menu.classList.contains("hidden");
      
      if (isHidden) {
        menu.classList.remove("hidden");
        btn.setAttribute("aria-expanded", "true");
      } else {
        menu.classList.add("hidden");
        btn.setAttribute("aria-expanded", "false");
      }
    });

    menu.addEventListener("click", (e) => {
      if ((e.target as HTMLElement).tagName === 'A') {
        menu.classList.add("hidden");
        btn.setAttribute("aria-expanded", "false");
      }
    });
  }
</script>
