---
interface Props {
  title?: string;
  label?: string;
  date?: string;
}

const { title, label, date } = Astro.props;
---

<article class="bg-card border border-border rounded-lg p-5 hover:border-accent transition-colors duration-300">
  {label && (
    <div class="flex items-center gap-1 text-primary mb-2">
      <slot name="icon" />
      <h2 class="text-sm font-semibold uppercase tracking-wider text-primary">{label}</h2>
    </div>
  )}
  
  {title && (
    <h3 class="text-xl font-medium text-primary mb-2">{title}</h3>
  )}
  
  <div class="text-muted-foreground text-sm">
    <slot />
  </div>
  
  {date && (
    <time class="text-xs text-muted-foreground mt-3 block">{date}</time>
  )}
</article>
