---
import { GitBranch, Github, Linkedin } from '@lucide/astro';
---

<footer class="px-4 py-8 border-t border-dashed border-primary/30">
  <div class="max-w-6xl mx-auto flex flex-col md:flex-row items-center justify-between gap-4">
    <div class="flex items-center gap-4">
      <a 
        href="https://github.com/EduardoSantos2231/visuDSA"
        target="_blank" 
        rel="noopener noreferrer"
        aria-label="GitHub"
        class="flex items-center gap-2 text-foreground/80 hover:text-primary transition-colors"
      >
        <Github class="size-5" />
        <span class="text-sm">GitHub</span>
      </a>
      <a 
        href="https://www.linkedin.com/in/edusn/"
        target="_blank" 
        rel="noopener noreferrer"
        aria-label="LinkedIn"
        class="flex items-center gap-2 text-foreground/80 hover:text-primary transition-colors"
      >
        <Linkedin class="size-5" />
        <span class="text-sm">LinkedIn</span>
      </a>
    </div>
    <p class="text-xs text-muted-foreground">VisuDSA v1.0.0</p>
  </div>
</footer>
